<script>
function setValue(form){
  $('#description').attr('value', $('#editor').html());
}
</script>

<% var form = formFor(post, {onsubmit:'setValue(this)', action: pathTo.posts(), method: 'POST', id: "post-form", class: 'form-horizontal'}) %>
<%- form.begin() %>
<%- include _form %>
<div class="form-actions">
    <%- form.submit('Create Question', {class: 'btn btn-primary'}) %>
</div>
<%- form.end() %>
